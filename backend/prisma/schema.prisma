// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String   @id @default(cuid())
  walletAddress   String   @unique @map("wallet_address")
  profileData     Json?    @map("profile_data")
  reputationScore Int      @default(0) @map("reputation_score")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  // Relations
  createdProjects  Project[]   @relation("ProjectCreator")
  contributions    Contribution[]
  reputationHistory ReputationHistory[]

  @@map("users")
}

model Project {
  id           String    @id @default(cuid())
  contractId   String    @unique @map("contract_id")
  creatorId    String    @map("creator_id")
  creator      User      @relation("ProjectCreator", fields: [creatorId], references: [id])
  title        String
  description  String?
  category     String
  goal         BigInt
  currentFunds BigInt     @default(0) @map("current_funds")
  deadline     DateTime
  ipfsHash     String?   @map("ipfs_hash")
  status       ProjectStatus @default(ACTIVE)
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  // Relations
  contributions Contribution[]
  milestones   Milestone[]

  @@map("projects")
}

model Contribution {
  id            String   @id @default(cuid())
  transactionHash String   @unique @map("transaction_hash")
  investorId     String   @map("investor_id")
  investor       User     @relation(fields: [investorId], references: [id])
  projectId      String   @map("project_id")
  project        Project  @relation(fields: [projectId], references: [id])
  amount         BigInt
  timestamp      DateTime @default(now())
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  @@map("contributions")
}

model Milestone {
  id                String   @id @default(cuid())
  projectId         String   @map("project_id")
  project           Project  @relation(fields: [projectId], references: [id])
  title             String
  description       String?
  fundingAmount     BigInt   @map("funding_amount")
  status            MilestoneStatus @default(PENDING)
  completionDate    DateTime? @map("completion_date")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  @@map("milestones")
}

model ReputationHistory {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id])
  scoreChange Int      @map("score_change")
  reason      String
  timestamp   DateTime @default(now())
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("reputation_history")
}

model Category {
  id          String @id @default(cuid())
  name        String @unique
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("categories")
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  CANCELLED
  SUSPENDED
}

enum MilestoneStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
  FUNDED
}
